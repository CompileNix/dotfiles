xrdb .Xresources

for i in {1..100}
do
    xinput --set-prop $i "libinput Accel Profile Enabled" 0 2>/dev/null
    xinput --set-prop $i "libinput Accel Speed" -0.9 2>/dev/null
    xinput --set-prop $i "Device Accel Profile" 2 2>/dev/null
    xinput --set-prop $i "Device Accel Velocity Scaling" .01 2>/dev/null
done

xset r rate 125 37
setxkbmap -layout us,de
setxkbmap -option 'grp:alt_shift_toggle'

# vim: sw=4 et